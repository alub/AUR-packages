pkgname=libpicviz
pkgver=0.6.1
pkgrel=1
pkgdesc="A parallel coordinates plotter which enables easy scripting from various input (Python library)"
arch=('i686' 'x86_64')
url="http://www.wallinfire.net/picviz/"
license=('GPL')
depends=('python2')
makedepends=('libevent' 'pcre' 'cmake')
source=("http://www.wallinfire.net/files/picviz/$pkgname-$pkgver.tar.gz")
md5sums=('6a3df34dba69e244a483017050d8c964')
sha1sums=('e3a899e7beb39c87233d0853ac39ed77d3f8774c')
sha256sums=('e7395c7ac2537e3edcc704bd6008f498ae6cc73bdc4b0e97a04075dac11e6a65')
sha384sums=('fab88c4de7a3e4a17cf424de933c4ae571c97ae2c96d6609d231d41c138c0c23946762d22636d8b26b1bc4b809320046')
sha512sums=('0e281473be6f8670ce2d58577ae2b14df9a75678e17c3993392dc215997a7bcb908ac9eed6de28961d8e5156745369ae350e572ccc2184f822991a40645d7651')

build() {
  cd "$srcdir/$pkgname-$pkgver"

  cmake -DCMAKE_INSTALL_PREFIX=/usr
  make || return 1
}

package() {
  cd "$srcdir/$pkgname-$pkgver"

  make DESTDIR="$pkgdir/" install

  cd src/bindings/python
  python setup.py install --root=$pkgdir/ --optimize=1
}

