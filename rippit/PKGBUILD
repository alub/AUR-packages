# Maintainer: Antoine Lubineau <antoine@lubignon.info>

pkgname=rippit
pkgver=0.0.1
pkgrel=1
pkgdesc="The No-Nonsense media ripper"
arch=('i686' 'x86_64')
url="http://wm161.net/2011/03/27/rippit-the-no-nonsense-media-ripper/"
license=('GPL')
depends=('libmusicbrainz3' 'gstreamer0.10')
source=("http://tdfischer.fedorapeople.org/$pkgname-$pkgver.tar.gz")
md5sums=('ae130b41d3ca1ffd3eb12af1a818c01b')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  cmake -DCMAKE_INSTALL_PREFIX=/usr
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  make DESTDIR="$pkgdir/" install
}

# vim:set ts=2 sw=2 et:
