# Maintainer: Antoine Lubineau <antoine@lubignon.info>

pkgname=picviz-cli
pkgver=0.6
pkgrel=2
pkgdesc="PicViz command-line interface"
arch=('i686' 'x86_64')
url="http://www.wallinfire.net/picviz/"
license=('GPL')
depends=('glibc' 'libpicviz' 'pcre')
source=("http://www.wallinfire.net/files/picviz/$pkgname-$pkgver.tar.gz")
md5sums=('4ef5edbb77811de3ac608af28d02dce6')
sha1sums=('37c7d778bbdeee1261d09b8b2b999fc9db582e5e')
sha256sums=('cdf616cf63a3c99c87aa49381bb4fb55ed3bb6b70bb6e97ce42efb391c7b7a44')
sha384sums=('937bc3b6b048a27221c8767007641821ed749f0d42cff3f110c4f090f1419f465f0293e01468a0c561db4f78bab8d362')
sha512sums=('5d5f80582b674a04c25142df625d598cfdc3070ed50bf32dff313e0c5c8ce357f535e10f2da33d34eb839ef3158bfb9376a686a4f1b06bfa64c4b674fdc5049d')

build() {
  cd "$srcdir/$pkgname-$pkgver/src"

  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver/src"
  install -Dm755 pcv "$pkgdir/usr/bin/pcv"

  cd "$srcdir/$pkgname-$pkgver/doc"
  install -Dm644 pcv.1 "$pkgdir/usr/share/man/man1/pcv.1"
}

