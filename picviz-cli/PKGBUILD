# Maintainer: Antoine Lubineau <antoine@lubignon.info>

pkgname=picviz-cli
pkgver=0.6
pkgrel=2
pkgdesc="PicViz command-line interface"
arch=('i686' 'x86_64')
url="http://www.wallinfire.net/picviz/"
license=('GPL')
depends=('glibc' 'libpicviz' 'pcre')
source=("http://www.wallinfire.net/files/picviz/$pkgname-$pkgver.tar.gz")
md5sums=('4ef5edbb77811de3ac608af28d02dce6')

build() {
  cd "$srcdir/$pkgname-$pkgver/src"

  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver/src"
  install -Dm755 pcv "$pkgdir/usr/bin/pcv"

  cd "$srcdir/$pkgname-$pkgver/doc"
  install -Dm644 pcv.1 "$pkgdir/usr/share/man/man1/pcv.1"
}

# vim:set ts=2 sw=2 et:
